#course.row
  .top
  .mid
    .row
      %h1 LevelUp Course Details
    - programs.each do |program|
      .row.week
        .row
          .span12
            .header
              %h3= program[:week]
              %h4= program[:summary]
              %img{src: "/assets/img/page-structure/course/dot.png"}
        .row
          .span8
            .left
              %p= program[:description]
          .span4
            .right
              %h4 Pre-reading
              %ul
                - program[:pre_readings].each do |pre_reading|
                  %li
                    %a{href: pre_reading[:link]}= pre_reading[:title]
  .bot
